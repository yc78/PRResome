@using Resume.DAL.ViewModels.User
@model CreateUserViewModel

@{
    ViewData["Title"] = "افزودن کاربر";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <form asp-action="Create" method="post">
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Email" class="form-control" placeholder="آدرس ایمیل">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Mobile" class="form-control" placeholder="موبایل">
                                    <span asp-validation-for="Mobile"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="FirstName" class="form-control" placeholder="نام">
                                    <span asp-validation-for="FirstName"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="LastName" class="form-control" placeholder="نام خانوادگی">
                                    <span asp-validation-for="LastName"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور">
                                    <span asp-validation-for="Password"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-check m-l-10">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                            فعال است؟
                                            <span class="form-check-sign">
                                                <span class="check"></span>
                                            </span>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-success btn-lg m-l-15 waves-effect">ثبت</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>